doctype html
html
  head
    title !{title}
    link(rel='stylesheet', href='/css/style.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    block head
  body
    block header
      header.header
        noscript: h1 You need JavaScript enabled to use this page. &nbsp;
        h1 !{title}

    if msg
      .msg
        =msg

    main
      block content
    block script
